{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "incremental-build",
      "type": "shell",
      "command": "yarn",
      "options": {
        "env": {
          "TSC_WATCHFILE": "UseFsEventsOnParentDirectory"
        }
      },
      "args": ["tsc", "--build", "tsconfig.incremental.json", "--watch"],
      "isBackground": true,
      "group": "build",
      "problemMatcher": "$tsc-watch"
    }
  ]
}
